<div class="devise-container">
  <div class="devise-title">
    <h2>ルーム作成</h2>
  </div>
  <div class="devise-form">
    <%= form_with model: @room, local: true do |f| %>
    <%= render "devise/shared/error_messages", model: f.object %>
      <div class="field">
        <label class="form-text">ルーム名</label>
        <%= f.text_field :room_name, placeholder:"ルーム名 (20文字以内)", maxlength:"20", class:"form-default" %>
      </div>

      <div class="field">
        <label class="form-text">ルーム説明文</label>
        <%= f.text_field :room_description, placeholder:"ルーム説明 (100文字以内)", maxlength:"100", class:"form-default" %>
      </div>

      <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>

      <div class="register-btn">
        <%= f.submit "作成", class:"register-blue-btn" %>
      </div>
    <% end %>

  </div>
</div>